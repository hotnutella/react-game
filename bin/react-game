#!/usr/bin/env node

// CLI entry point for ReactGame
const path = require('path');

// Check if we're running from built dist or source
const distCli = path.join(__dirname, '../dist/cli/index.js');
const srcCli = path.join(__dirname, '../src/cli/index.ts');

try {
  // Try to use built version first
  if (require('fs').existsSync(distCli)) {
    require(distCli);
  } else {
    // Fallback to TypeScript source (for development)
    require('ts-node/register');
    require(srcCli);
  }
} catch (error) {
  console.error('‚ùå ReactGame CLI Error:', error.message);
  process.exit(1);
}
